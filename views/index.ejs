<%- include ('partials/header.ejs') %>

<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-primary">Perguntar</a>
        <hr>
        <% perguntas.forEach(pergunta => { %>
        <br>
        <div class="card">
            <div class="card-body">
                <h5> <%= pergunta.titulo %> </h5>
                <p class="data-pergunta"> Postado em <%= moment(pergunta.createdAt).format('DD/MM/YYYY') %></p>                                    
            </div>
            <div class="card-footer">
                <a href="/pergunta/<%=pergunta.id%>"> 
                <button class="btn btn-primary">Responder</button></a>
            </div>
        </div>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs') %>